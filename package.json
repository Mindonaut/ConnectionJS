{
	"name": "connection.js",
	"version": "0.0.1",
	"type": "module",
	"devDependencies": {
		"chai": "^4.3.4",
		"mocha": "^9.1.3",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"rules": {
			"space-in-brackets": [
				"error",
				"always"
			],
			"indent": [
				"error",
				2
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"never"
			],
			"no-empty": "warn",
			"no-cond-assign": [
				"error",
				"always"
			]
		}
	},
	"prettier": {
		"semi": false,
		"bracketSpacing": true
	}
}
